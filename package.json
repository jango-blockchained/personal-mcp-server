{
	"name": "@aashari/boilerplate-mcp-server",
	"version": "1.4.0",
	"description": "A boilerplate Model Context Protocol (MCP) server implementation using TypeScript",
	"type": "module",
	"main": "dist/index.cjs",
	"types": "dist/index.d.cts",
	"bin": {
		"mcp-server": "dist/index.cjs"
	},
	"scripts": {
		"build": "tsup src/index.ts --format cjs --dts",
		"clean": "rimraf dist",
		"dev": "NODE_OPTIONS=\"--no-warnings --loader ts-node/esm\" node src/index.ts",
		"format:check": "prettier --check \"{src,scripts}/**/*.{ts,js}\"",
		"format": "prettier --write \"{src,scripts}/**/*.{ts,js}\"",
		"inspector": "mcp-inspector -- npm run --silent dev",
		"lint:fix": "eslint \"{src,scripts}/**/*.{ts,js}\" --fix",
		"lint": "eslint \"{src,scripts}/**/*.{ts,js}\"",
		"prebuild": "npm run clean",
		"prepare": "npm run build",
		"start": "node dist/index.cjs",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"update-version": "node scripts/update-version.js",
		"watch": "tsc --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aashari/boilerplate-mcp-server.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"ai",
		"llm",
		"typescript",
		"server"
	],
	"author": {
		"name": "Andi Ashari",
		"url": "https://github.com/aashari"
	},
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/aashari/boilerplate-mcp-server/issues"
	},
	"homepage": "https://github.com/aashari/boilerplate-mcp-server#readme",
	"engines": {
		"node": ">=22.14.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.7.0",
		"commander": "^13.1.0",
		"dotenv": "^16.4.7"
	},
	"devDependencies": {
		"@commander-js/extra-typings": "^13.1.0",
		"@eslint/js": "^9.22.0",
		"@modelcontextprotocol/inspector": "^0.6.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.10",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-prettier": "^5.2.3",
		"jest": "^29.7.0",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"tsup": "^8.4.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1"
	}
}
