{
	"name": "@aashari/boilerplate-mcp-server",
	"version": "1.7.1",
	"description": "A boilerplate Model Context Protocol (MCP) server implementation using TypeScript",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.cts",
	"exports": {
		".": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs",
			"default": "./dist/index.mjs"
		}
	},
	"bin": {
		"boilerplate-mcp-server": "dist/index.cjs"
	},
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --clean",
		"check": "npm run format:check && npm run lint",
		"clean": "rimraf dist",
		"dev": "concurrently \"tsc --watch --preserveWatchOutput\" \"nodemon --exec 'node --no-warnings --loader ts-node/esm src/index.ts'\"",
		"fix": "npm run format && npm run lint:fix",
		"format:check": "prettier --check \"{src,scripts}/**/*.{ts,js}\"",
		"format": "prettier --write \"{src,scripts}/**/*.{ts,js}\"",
		"inspector": "mcp-inspector -- npm run --silent dev",
		"lint:fix": "eslint \"{src,scripts}/**/*.{ts,js}\" --fix",
		"lint": "eslint \"{src,scripts}/**/*.{ts,js}\"",
		"prepare": "npm run build",
		"prepublishOnly": "npm run test",
		"start": "npm run build && node dist/index.cjs",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --coverageReporters=text,html",
		"update-version": "node scripts/update-version.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aashari/boilerplate-mcp-server.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"ai",
		"llm",
		"typescript",
		"server"
	],
	"author": {
		"name": "Andi Ashari",
		"url": "https://github.com/aashari"
	},
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/aashari/boilerplate-mcp-server/issues"
	},
	"homepage": "https://github.com/aashari/boilerplate-mcp-server#readme",
	"engines": {
		"node": ">=22.14.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.7.0",
		"commander": "^13.1.0",
		"dotenv": "^16.4.7"
	},
	"devDependencies": {
		"@commander-js/extra-typings": "^13.1.0",
		"@eslint/js": "^9.22.0",
		"@modelcontextprotocol/inspector": "^0.6.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.10",
		"concurrently": "^9.0.1",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-prettier": "^5.2.3",
		"jest": "^29.7.0",
		"nodemon": "^3.1.7",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"tsup": "^8.4.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1"
	}
}
